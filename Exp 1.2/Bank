<body>
<div class="container mt-5">
    <div class="text-center">
        <h2>Welcome to Bank Bro ðŸ’°</h2>
        <img src="bank.png" alt="Bank" style="width:250px;">
    </div>
    <div class="row mt-4">
        <div class="col">
            <input type="number" id="amount" class="form-control" placeholder="Kitna Paisa?">
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-6">
            <button onclick="deposit()" class="btn btn-success w-100">Deposit</button>
        </div>
        <div class="col-6">
            <button onclick="withdraw()" class="btn btn-danger w-100">Withdraw</button>
        </div>
    </div>
    <div class="mt-4 text-center">
        <h4>Balance: â‚¹ <span id="result">0.00</span></h4>
    </div>
</div>

<script>
let balance = 0; // Initial balance bhai

function deposit(){
    let amt = parseFloat(document.getElementById("amount").value);
    if(isNaN(amt) || amt <= 0){
        alert("Paisa toh daal bhai ðŸ˜’");
        return;
    }
    balance += amt;
    document.getElementById("result").innerText = balance.toFixed(2);
    alert("Deposited â‚¹" + amt);
    document.getElementById("amount").value = "";
}

function withdraw(){
    let amt = parseFloat(document.getElementById("amount").value);
    if(isNaN(amt) || amt <= 0){
        alert("Kitna nikaalega bhai? ðŸ¤¨");
        return;
    }
    if(amt > balance){
        alert("Gareeb! Itna paise nai hai. ðŸ˜­");
        return;
    }
    balance -= amt;
    document.getElementById("result").innerText = balance.toFixed(2);
    alert("Withdrawn â‚¹" + amt);
    document.getElementById("amount").value = "";
}
</script>
